            }

            .footer a {
                color: #33aaff;
                text-decoration: none;
                font-weight: 600;
            }

            .footer a:hover {
                text-decoration: underline;
            }

            strong {
                margin: 0 4px;
                font-weight: 600;
                color: #33aaff;
            }
